<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Override the ControlButtons template to add our Reference button -->
    <t t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('control-buttons-modal')]" position="inside">
           <button class="btn btn-secondary btn-lg py-5 flex-shrink-0"><i
                   class="fa fa-sticky-note me-1"></i>
               <span>Reference
           </span></button>
        </xpath>
    </t>
</templates>

